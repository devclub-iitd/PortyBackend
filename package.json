{
  "name": "porty-backend",
  "version": "0.0.1",
  "private": false,
  "scripts": {
    "start": "npm run prod",
    "server": "babel-node ./src/server",
    "server:prod": "node ./dist/server",
    "dev": "NODE_ENV=development npm-run-all server",
    "clean": "rimraf dist",
    "build": "babel ./src --out-dir dist",
    "prod": "NODE_ENV=production npm-run-all clean build server:prod",
    "watch": "nodemon",
    "lint": "eslint --fix 'src/**/*.js'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-validator": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.0",
    "nodemailer": "^6.2.1",
    "npm-run-all": "^4.1.5",
    "regenerator-runtime": "^0.13.2",
    "rimraf": "^2.6.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^6.0.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.14.1",
    "nodemon": "^1.19.1"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "browser": true
    },
    "parser": "babel-eslint"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "description": "This repo is for the backend of the automated Portfolio website maker.",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/devclub-iitd/PortyBackend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/devclub-iitd/PortyBackend/issues"
  },
  "homepage": "https://github.com/devclub-iitd/PortyBackend#readme"
}
